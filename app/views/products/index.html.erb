<h1>Product List</h1>
<% @products.each do |product| %>
    <div class="card">
        <div class="card-body">
            <h3><%= product.product_name %></h3>
            <p><%= product.description %></p>
            <p><%= product.id %></p>
            <%= link_to "Read More", product_path(product), :class => 'btn btn-primary' %>
        </div>
    </div>
<% end %>